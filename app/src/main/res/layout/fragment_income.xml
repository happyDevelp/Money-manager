<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="always">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        tools:context=".IncomeFragment">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:text="@string/Category"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:paddingVertical="8dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/salary_container"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp">
                <!--android:background="@drawable/category_green_active_background"-->

                <ImageView
                    android:id="@+id/salary_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@drawable/category_green_background"
                    android:padding="2dp"

                    android:src="@drawable/salary_icon_white" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/help_container"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp">
                <!--android:background="@drawable/category_blue_active_background"-->

                <ImageView
                    android:id="@+id/help_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:background="@drawable/category_blue_background"

                    android:padding="5dp"
                    android:src="@drawable/help_icon_white"
                    tools:ignore="ContentDescription" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/gift_container"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp">
                <!--android:background="@drawable/category_pink_active_background"-->

                <ImageView
                    android:id="@+id/gift_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:background="@drawable/category_pink_background"

                    android:padding="14dp"
                    android:src="@drawable/gift_icon_white"
                    tools:ignore="ContentDescription" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/other_container"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp">
                <!--android:background="@drawable/category_beige_active_background"-->

                <ImageView
                    android:id="@+id/other_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@drawable/category_beige_background"

                    android:padding="13dp"
                    android:src="@drawable/other_icon_white"
                    tools:ignore="ContentDescription,ImageContrastCheck" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2">

            <TextView
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:text="@string/salary"
                android:textAlignment="center"
                android:textColor="@color/small_text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/help"
                android:textAlignment="center"
                android:textColor="@color/small_text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:text="@string/gift"
                android:textAlignment="center"
                android:textColor="@color/small_text"
                android:textSize="16sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:text="@string/other"
                android:textAlignment="center"
                android:textColor="@color/small_text"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38sp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat4">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/today_container"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/active_datepicker_background"
                android:foreground="?android:selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <TextView
                    android:id="@+id/date_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="03.03" />

                <TextView
                    android:id="@+id/textView_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/today"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/yesterday_container"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:foreground="?android:selectableItemBackgroundBorderless"

                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_yesterday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="02.03" />

                <TextView
                    android:id="@+id/textView_yesterday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yesterday"

                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/twoDaysAgo_container"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:foreground="?android:selectableItemBackgroundBorderless"


                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/today_container"
                app:layout_constraintStart_toEndOf="@+id/yesterday_container">

                <TextView
                    android:id="@+id/date_2daysago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="01.03" />

                <TextView
                    android:id="@+id/textView_2daysAgo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="@string/the_day_before_yesterday"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/calendar_picker_image"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="8dp"

            android:src="@drawable/calendar_icon"
            android:tooltipText="@string/hint_calendar"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutCompat5"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription,UnusedAttribute" />

        <TextView
            android:id="@+id/textView4"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/alegreya_sans_sc_medium"
            android:text="@string/Comment"
            android:textColor="@color/black"
            android:textSize="19sp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat5" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:hint="@string/comment_hint_edittext"
            android:inputType="text"
            android:minHeight="48dp"

            android:textColor="@color/black"
            android:textColorHint="#546E7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="Autofill" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayoutCompat9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextText">

            <TextView
                android:id="@+id/textView5"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"

                android:layout_marginTop="4dp"
                android:text="@string/add_photo"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/add_photo_imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/add_photo_background"
                android:padding="15dp"

                android:src="@drawable/baseline_add_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:ignore="ContentDescription,ImageContrastCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>